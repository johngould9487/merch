<div class="container show-details">
  <div class="row">
    <div class="col-sm-5">
      <%# image_tag url('@poster.photo'), width: '400', height: '600', align: 'left'%>

      <%= cl_image_tag @poster.photo, height: 600, width: 400, crop: :fill %>
    </div>
    <div class="col-sm-7">
      <h1><%= @poster.artist_name%></h1> <h2>Performing at: <%= @poster.venue_name %></h2>
      <h2></%> On: <%= @poster.date.strftime("#{@poster.date.day.ordinalize} %B %Y") %></h2>
      <p><%= @poster.description %></p>
      <h1>Â£<%= @poster.price %> </h1>
      <% if @poster.sold %>
      <p>Sold!</p>
      <% else %>
      <%= link_to "Buy Now", new_poster_transaction_path(@poster.id), :class => "btn btn-lg btn-primary"  %>
      <% end %>
      <div class="seller">
        <div style="width:100%; height:1px; border: 1px solid #3AA0C5"></div>
        <div>
          <%= image_tag @poster.user.avatar, alt: "alttext", style: "margin-top:-30px;", class: "avatar" %>
        </div>
        <div class="seller-contact">
          <%= @poster.user.email %>
        </div>
        <div class="seller-bio">
          <i class="fas fa-quote-left"></i>
          <%= @poster.user.bio %>
          <i class="fas fa-quote-right"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container show-details">
  <div class="row">
    <div class="col-sm-5">
      <%# image_tag url('@poster.photo'), width: '400', height: '600', align: 'left'%>
      <img src=" <%= @poster.photo %> "
      style="width: 400px; height: 600px;">
    </div>
    <div class="col-sm-7">
      <h1><%= @poster.artist_name%></h1> <h2>Performing at: <%= @poster.venue_name %></h2>
      <h2></%> On: <%= @poster.date.strftime("#{@poster.date.day.ordinalize} %B %Y") %></h2>
      <p><%= @poster.description %></p>
      <h1>Â£<%= @poster.price %> </h1>
      <% if @poster.sold %>
        <p>Sold!</p>
      <% else %>
        <%= link_to "Buy Now", new_poster_transaction_path(@poster.id), :class => "btn btn-lg btn-primary"  %>
      <% end %>
      <div class="user-info">
        <div class="seller">
          <h3>Who's selling?</h3>
        </div>
        <div class="seller-info">
          <p>Hello, my name is John. I am a poster enthusiast! I have a big collection of
            posters from many concerts! Please feel free to send me an email to get more information
            for this poster! </p>
          </div>
          <div class="seller-handle">
            <p> Contact: <%= @poster.user.email %> </p>
          </div>
        </div>
      </div>
    </div>
  </div>

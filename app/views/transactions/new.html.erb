      <div class="seller">
        <div style="width:100%; height:1px; border: 1px solid #3AA0C5"></div>
        <div>
          <%= image_tag @poster.user.avatar, alt: "alttext", style: "margin-top:-30px;", class: "avatar" %>
        </div>
        <div class="seller-contact">
          <%= @poster.user.username %>
        </div>
      </div>
      <h2 style="text-align: right;">Â£<%= @poster.price %></h2>
      <%= simple_form_for([@poster, @transaction]) do |f| %>

<% @posters.each do |poster| %>
  <div class="col-xs-12 col-sm-3">
    <div class="card" >
      <div class="card-container" style="background-image: url(<%= poster.photo %>);">
      </div>
      <div class="info-holder">
        <div class="card-description">
          <h4><%= poster.artist_name %></h4>
          <h4>Â£<%= poster.price %> </h4>
        </div>
        <div class="date-place">
          <p> <%= poster.venue_name %> - <%= poster.date.strftime("#{poster.date.day.ordinalize} %B %Y") %>
          </p>
        </div>
      </div>
    </div>
    <%= link_to "", poster_path(poster.id), class: "card-link" %>
  </div>
<% end %>
